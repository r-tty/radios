;-------------------------------------------------------------------------------
;  kconio.ah - macros and externs for kernel console I/O.
;  This file should be used only in debugging purposes!
;-------------------------------------------------------------------------------

; Print character in AL
%macro mPrintChar 0-1
%if %0==1
	mov	al,%1
%endif
	call	PrintChar
%endmacro

; Print string (ESI=address)
%macro mPrintString 0-1
%if %0==1
	mov	esi,%1
%endif
	call	PrintString
%endmacro
